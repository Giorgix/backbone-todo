  <script src="javascripts/collections/todos.js" type="text/javascript"></script>
  <script src="javascripts/views/todos.js" type="text/javascript"></script>
  <script src="javascripts/views/app.js" type="text/javascript"></script>
  <script src="javascripts/routers/router.js" type="text/javascript"></script>
  <script src="javascripts/app.js" type="text/javascript"></script>
 
